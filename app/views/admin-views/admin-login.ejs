<body class="login-body">

<section class="login-sec">
	<div class="container-fluid">
		<div class="row">
			<div class="col-md-5 m-auto">
				<div class="middle-login">
					<h4>Admin Login</h4>
					<p class="first-line">Please enter username and password to login.</p>
					<div class="login-form-main">
              <% if(err_msg!=undefined && err_msg !='' ){ %>
                <div class="alert alert-danger text-center  flash_msg " id="error_msg">
                    <%= err_msg %>
                   </div>
                 
                <% }%>
                 <% if(success_msg!=undefined && success_msg !='' ){ %>
                  <div class="alert alert-success text-center  flash_msg "id="success_message">
                  <%= success_msg %>
                 </div>
                <% }%>
						<form action="/admin-login-post" method="POST" id="validate">
							<div class="form-group for-warning">
						    <label >Email ID <span style="color: red">*</span></label>
						    <input type="email" class="form-control"  placeholder=""name="username" data-rule-required="true" data-msg-required="Please enter email.">
						  </div>
						  <div class="form-group mb-15">
						    <label>Password <span style="color: red">*</label>
						    <input type="password" class="form-control" placeholder=""name="password" data-rule-required="true" data-msg-required="Please enter password.">
						  </div>
						  <div class="text-right">
                <a href="/admin-forgot-password" class="forgot-link">Forgot Password?</a>
                
						  </div>
						  <div>
						  	<button class="bg-gradient-primary text-white">Login</button>
						  </div>
					</div>
				</div>
			</div>
		</div>
	</div>
</section>






