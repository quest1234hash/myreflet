<body class="login-body">    
<section class="login-sec">
	<div class="container-fluid p-0">
		<div class="row m-0">
			<div class="col-md-6 p-0">
				<div class="left-side-login">
					<div class="logo-box">
						<a href="">
							<img src="assets/images/logo.png">
						</a>
					</div>
					<div class="side-text">
						<h2>
							Forgot Password?
						</h2>
					</div>
				</div>
			</div>
			<div class="col-md-6 p-0">
				<div class="right-side-login forgot-pass">
					<div class="inner-div">
						<p class="first-line">Please enter email ID and we will send you a verification code.</p>


						
					   
                        <% if(err_msg!=undefined && err_msg !='' ){ %>
                            <div class="alert alert-danger text-center  flash_msg " id="error_msg">
                                <%= err_msg %>
                               </div>
                             
                            <% }%>
                             <% if(success_msg!=undefined && success_msg !='' ){ %>
                              <div class="alert alert-success text-center  flash_msg "id="success_message">
                              <%= success_msg %>
                             </div>
                            <% }%>
			<form action="/admin-forgot-post" id="validateForget" method="POST" >
							<div class="login-form-main">
								 <div class="form-group for-warning">
								    <label>Email ID</label>
								    <input type="email" name="emailid" class="form-control"  placeholder="Enter Email-Id" data-rule-required="true" data-msg-required="Please enter email."  data-rule-email="true" value="" />
								    <div class="info-icon" data-toggle="tooltip" data-placement="top" title="Invalid Email ID">
								    	<img src="assets/images/icons/warning.png" >
								    </div>
								  </div>
								  <div>
								  	<button type="submit" id="forgotSubmit" name="submit" class="purple-btn">Submit</button>
								  </div>
							</div>
						</form>
					</div>
				</div>
			</div>
		</div>
	</div>
</section>
<script type="text/javascript" src="assets/js/jquery-3.3.1.min.js"></script>
 <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-validate/1.19.1/jquery.validate.min.js"></script>

       
         
<script type="text/javascript">
	$('#validateForget').validate({
		 onfocusout: function(element) {
		 this.element(element);
		 },
		 errorClass: 'error_validate',
		 errorElement:'span',
		 highlight: function(element, errorClass) {
		 $(element).removeClass(errorClass);
		 },
		 submitHandler:function(form)
			{
			   $('#forgotSubmit').attr('disabled',true);
			   form.submit();
			}
         });
         setTimeout(function() {
        $('#success_message').fadeOut('fast');
        }, 3000);
        
        setTimeout(function() {
        $('#error_msg').fadeOut('fast');
        }, 3000);
</script>
