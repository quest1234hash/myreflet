<script>
	$(".inputs").keyup(function (e) {
		
		//script for backspace key
		var key = (e.keyCode);
		if(key == 8){
			var curid = e.target.id;
			var id_to_focus = 1;
			curid = curid.substring((curid.length-1),curid.length);
			if(curid == 1){
				document.getElementById('otp1').focus();
			}
			else if((curid > 1) && (curid <= 4)){
				id_to_focus = parseInt(curid) - 1;
				var final_id = "otp" + id_to_focus;
				//console.log(final_id);
				document.getElementById(final_id).focus();
			}
		}



		if (this.value.length == this.maxLength) {
			var $next = $(this).next('.inputs');
			if ($next.length)
				$(this).next('.inputs').focus();
			else
				$(this).blur();
		}
	});






	$(".email_inputs").keyup(function (e) {
		
